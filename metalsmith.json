{
  "source": "./src",
  "destination": "./_site",
  "metadata": {
    "title": "View.js",
    "description": "Low-level view primitives"
  },
  "plugins": {
    "metalsmith-markdown": {},
    "metalsmith-permalinks": {
      "pattern": ":title"
    },
    "metalsmith-templates": {
      "engine": "jade",
      "directory": "./templates"
    },
    "metalsmith-static": {
      "src": "public",
      "dest": "."
    }
  }
}